@import 'nib'

body
	reset-box-model()
	font-family: 'Arial'
	background-color: #000

#game-table
	background: url('../assets/Table.png') no-repeat

	// fixed size of background table image
	width: width = 1536px
	height: height = 1024px
	position: fixed
	z-index: 10

	// center it in both directions
	top: 50%
	left: 50%
	margin-left: -(width / 2)
	margin-top: -(height / 2)

#game
	position: absolute
